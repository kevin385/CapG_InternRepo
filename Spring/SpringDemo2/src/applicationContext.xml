<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  

<bean id="coff" class="com.cg.entity.Coffee"></bean>
<bean id="tea" class ="com.cg.entity.Tea"></bean>


<bean id="r" class="com.cg.entity.Restaurant">  
	<property name="restaurantName" value="A2B"></property>
	<property name="hotDrink" ref="coff"></property>
</bean>  
  
</beans>  